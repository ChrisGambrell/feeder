datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

enum ActivityType {
  FOOD
  PEE
  POOP
}

model Activity {
  id         String   @id @default(cuid())
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt

  user_id String
  user    User   @relation(fields: [user_id], references: [id])

  type   ActivityType
  amount Int?
  unit   String?
  notes  String?
}
